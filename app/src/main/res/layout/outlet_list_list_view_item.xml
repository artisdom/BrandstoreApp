<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ebebeb"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/d1"
        android:alpha="0.8"></RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">


        <ImageView
            android:id="@+id/outlet_image"
            android:layout_width="75dp"
            android:layout_height="175dp"

            android:layout_weight="4"
            android:scaleType="fitXY"
            android:alpha="0.9"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:layout_weight="7"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/outletname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puma"
                android:textColor="#ebebeb"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="LGF, Phoenix Market City"
                android:textColor="#ebebeb"
                android:textSize="14sp" />

            <!--
                    <TextView
                        android:id="@+id/outletcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:text="New Text"
                        android:textColor="#ebebeb"
                        android:textSize="15sp" />  -->

            <!--
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"

                        android:layout_marginTop="7dp"
                        android:text="Known For :"
                        android:textColor="#ebebeb"
                        android:textSize="15sp" />
            -->
            <TextView
                android:id="@+id/knownfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="45dp"

                android:text="Shoes, Bags , T-Shirts"
                android:textColor="#ebebeb"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="Cost of "
                    android:textColor="#ebebeb"
                    android:textSize="16sp" />

                <TextView

                    android:id="@+id/most_relevant_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView5"
                    android:text="Shoes : "
                    android:textColor="#ebebeb"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/price_of_most_relevant_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/most_relevant_product"


                    android:text="Rs. 3000"
                    android:textColor="#ebebeb"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>