<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context="com.brandstore1.activities.TakeMeThereActivity"
        android:weightSum="@integer/activity_take_me_there_linearLayout_weightSum">

        <include
            android:id="@+id/takemetheretoolbar"
            layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_width="@dimen/activity_take_me_there_textView_width"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/activity_take_me_there_weight"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="From"
                android:id="@+id/from"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:textSize="@dimen/activity_take_me_there_textView_textSize"
                android:paddingLeft="@dimen/activity_take_me_there_textView_paddingLeft"
                android:paddingTop="@dimen/activity_take_me_there_paddingTop" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/activity_take_me_there_weight"
                android:inputType="textPersonName"
                android:text="Where are you now?"
                android:layout_marginRight="@dimen/activity_take_me_there_editText_marginRight"
                android:id="@+id/tmt_from"
                android:tag="tmt_from"
                android:focusable="false"
                android:layout_toRightOf="@id/from"
                android:paddingTop="@dimen/activity_take_me_there_paddingTop"
                android:textColor="@color/tmt_label"/>

            <!--<ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/outlet_list"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/from"
                android:layout_alignLeft="@+id/from"
                android:layout_alignStart="@+id/from" />-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="@dimen/activity_take_me_there_textView_width"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/activity_take_me_there_weight"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="To"
                android:id="@+id/to"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:textSize="@dimen/activity_take_me_there_textView_textSize"
                android:paddingLeft="@dimen/activity_take_me_there_textView_paddingLeft"
                android:paddingTop="@dimen/activity_take_me_there_paddingTop" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/activity_take_me_there_weight"
                android:layout_marginRight="@dimen/activity_take_me_there_editText_marginRight"
                android:inputType="textPersonName"
                android:text="Where do you want to go?"
                android:id="@+id/tmt_to"
                android:tag="tmt_to"
                android:layout_toRightOf="@id/to"
                android:paddingTop="@dimen/activity_take_me_there_paddingTop"
                android:editable="false"
                android:focusable="false"
                android:textColor="@color/tmt_label"
                />
        </RelativeLayout>

        <ListView
            android:id="@+id/tmt_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:paddingBottom="@dimen/activity_take_me_there_listView_paddingBottom"
            android:paddingLeft="@dimen/activity_take_me_there_listView_paddingLeft"
            android:paddingRight="@dimen/activity_take_me_there_listView_paddingRight"
            android:paddingTop="@dimen/activity_take_me_there_listView_paddingTop"
            android:dividerHeight="@dimen/activity_take_me_there_listView_dividerHeight"
            android:background="@color/tmt_bg"
            />

        <TextView
            android:id="@+id/tmt_list_empty_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
