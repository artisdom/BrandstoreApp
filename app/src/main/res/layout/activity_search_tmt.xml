<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context="com.brandstore1.activities.SearchTMTActivity"
        android:weightSum="1">

        <include
            android:id="@+id/takemetheretoolbar"
            layout="@layout/toolbar" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Enter the Nearest Store"
                android:id="@+id/tmt_outlet"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:editable="false"
                android:focusable="true"
            android:padding="20dp" />
        <!--
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outlet_list"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tmt_outlet"
            android:layout_alignLeft="@+id/tmt_outlet"
            android:layout_alignStart="@+id/tmt_outlet" />


        <TextView
            android:id="@+id/tmt_list_empty_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
         -->
        <ListView
            android:id="@+id/list_view_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:divider="@color/black"
            android:dividerHeight="1dp"
            android:background="@drawable/roundededittext">

        </ListView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
