<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/outletDetails_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/outletdetailstoolbar"
                layout="@layout/toolbar" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/outletDetails_outer_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_outlet_details_relativeLayout1_height">

                        <ImageView
                            android:id="@+id/outletbackground"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activity_outlet_details_outletbackground_height"
                            android:background="@drawable/background" />

                        <requestFocus />

                        <ImageView
                            android:id="@+id/outlet_image"
                            android:layout_width="@dimen/activity_outlet_details_outlet_image_width"
                            android:layout_height="@dimen/activity_outlet_details_outlet_image_height"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/blank_screen" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_outlet_details_relativeLayout2_marginLeft">


                        <TextView
                            android:id="@+id/outletDetails_brandName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_outlet_details_brandName_marginTop"
                            android:text="Outlet Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_outlet_details_brandName_textSize" />

                        <TextView
                            android:id="@+id/outletDetails_floorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/outletDetails_brandName"
                            android:layout_below="@id/outletDetails_brandName"
                            android:layout_marginTop="@dimen/activity_outlet_details_floorName_marginTop"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Floor, "
                            android:textSize="@dimen/activity_outlet_details_floorName_textSize" />

                        <CheckBox
                            android:id="@+id/favorites"
                            android:layout_width="@dimen/activity_outlet_details_favorites_width"
                            android:layout_height="@dimen/activity_outlet_details_favorites_height"
                            android:layout_marginTop="@dimen/activity_outlet_details_favorites_marginTop"
                            android:layout_marginRight="@dimen/activity_outlet_details_favorites_marginRight"
                            android:layout_alignParentRight="true"
                            android:checked="false"
                            android:clickable="true"
                            android:button="@null"
                            android:background="@drawable/favorites"
                            android:onClick="addFavorites"/>

                        <TextView
                            android:id="@+id/outletDetails_hubName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/outletDetails_floorName"
                            android:layout_toRightOf="@id/outletDetails_floorName"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Hub Name"
                            android:textSize="@dimen/activity_outlet_details_hubname_textSize" />

                        <ImageView
                            android:id="@+id/first"
                            android:layout_width="@dimen/activity_outlet_details_first_width"
                            android:layout_height="@dimen/activity_outlet_details_height"
                            android:visibility="invisible"
                            android:layout_alignLeft="@id/outletDetails_floorName"
                            android:layout_below="@id/outletDetails_floorName"
                            android:layout_marginTop="@dimen/activity_outlet_details_first_marginTop"
                            android:src="@drawable/men"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/second"
                            android:layout_width="@dimen/activity_outlet_details_width"
                            android:layout_height="@dimen/activity_outlet_details_height"
                            android:layout_alignTop="@id/first"
                            android:visibility="invisible"
                            android:layout_marginLeft="@dimen/activity_outlet_details_marginLeft"
                            android:layout_toRightOf="@id/first"
                            android:scaleType="fitXY"
                            android:src="@drawable/women" />

                        <ImageView
                            android:id="@+id/third"
                            android:layout_width="@dimen/activity_outlet_details_width"
                            android:layout_height="15dp"
                            android:layout_alignTop="@id/first"
                            android:visibility="invisible"
                            android:layout_marginLeft="@dimen/activity_outlet_details_marginLeft"
                            android:layout_toRightOf="@id/second"
                            android:scaleType="fitXY"
                            android:src="@drawable/kids" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/outletDetails_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_outlet_details_marginLeft"
                        android:text="www.google.com"
                        android:textSize="@dimen/activity_outlet_details_website_textSize" />


                    <TextView
                        android:id="@+id/outletDetails_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_outlet_details_marginLeft"
                        android:layout_marginTop="@dimen/activity_outlet_details_description_marginTop"
                        android:fontFamily="sans-serif-condensed"
                        android:lineSpacingExtra="@dimen/activity_outlet_details_lineSpacingExtra"
                        android:text="Description"
                        android:textColor="@color/black"

                        android:textSize="@dimen/activity_outlet_details_description_textSize" />

                    <Button
                        android:id="@+id/readmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/activity_outlet_details_readmore_marginTop"
                        android:background="@null"
                        android:text="READ MORE"


                        android:textColor="@color/colorPrimary">


                    </Button>

                    <TextView
                        android:id="@+id/outletDetails_offer_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_outlet_details_marginLeft"
                        android:text="Offers"
                        android:textSize="@dimen/activity_outlet_details_offer_title_textSize" />

                    <TextView
                        android:id="@+id/outletDetails_offer_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_outlet_details_marginLeft"
                        android:text="Coming soon..."
                        android:fontFamily="sans-serif-condensed"
                        android:lineSpacingExtra="@dimen/activity_outlet_details_lineSpacingExtra"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_outlet_details_offer_title_textSize"
                        />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_outlet_details_imageView_height"
                        android:layout_marginLeft="@dimen/activity_outlet_details_imageView_margin"
                        android:layout_marginRight="@dimen/activity_outlet_details_imageView_margin"
                        android:layout_marginTop="@dimen/activity_outlet_details_imageView_margin"
                        android:background="@color/grey" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_outlet_details_relativeLayout_marginLeft"
                        android:layout_marginRight="@dimen/activity_outlet_details_relativeLayout_marginRight"
                        android:layout_marginTop="@dimen/activity_outlet_details_relativeLayout_marginTop">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="PRODUCT"
                            android:textSize="@dimen/activity_outlet_details_product_textSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="AVERAGE PRICE"
                            android:textSize="@dimen/activity_outlet_details_price_textSize" />
                    </RelativeLayout>


                    <!--
                                    <TextView
                                        android:id="@+id/outletDetails_tagAndPrice_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Average Price of Items : "


                                        android:textSize="20sp" />

                                    <LinearLayout
                                        android:id="@+id/outletDetails_tagAndPrice_linearLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                    </LinearLayout>
    -->
                    <ListView
                        android:id="@+id/tag_and_price"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_outlet_details_listView_margin"
                        android:background="@color/white"
                        android:divider="@null"
                        android:dividerHeight="@dimen/activity_outlet_details_listView_dividerHeight"
                        android:focusable="false"
                        android:focusableInTouchMode="false"></ListView>
                    <TextView
                        android:id="@+id/outlet_details_empty_tagPrice_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming soon..."
                        android:layout_marginLeft="@dimen/activity_outlet_details_marginLeft"
                        android:layout_marginTop="@dimen/activity_outlet_details_tagprice_marginTop"
                        android:fontFamily="sans-serif-condensed"
                        android:lineSpacingExtra="@dimen/activity_outlet_details_lineSpacingExtra"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_outlet_details_tagprice_textSize"
                        android:visibility="gone"
                    />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="@string/outlet_details_label_similarstores"
                android:textSize="15sp"
                android:fontFamily="sans-serif-clight"/>

            <TextView
                android:id="@+id/outlet_details_empty_relatedBrands_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outlet_details_label_comingsoon"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="gone"
                />

            <com.brandstore1.utils.HorizontalListView
                android:id="@+id/relatedbrands"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="13dp">

            </com.brandstore1.utils.HorizontalListView>
        </LinearLayout>
    </ScrollView>

